{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start:dev": "tsnd --respawn src/server.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node ./bundle/server.js",
    "start:multi": "cross-env API_MODE=cluster tsnd --respawn src/cluster/multiServer.ts",
    "build": "webpack",
    "start:product": "npm run build2 && node build/server",
    "build2": "tsc --project tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\" ",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --silent",
    "test:verbose": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/supertest": "^6.0.2"
  }
}
